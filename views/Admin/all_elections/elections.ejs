<!DOCTYPE html>
<head>
	<title>Programming can be fun</title>
	<link rel = 'stylesheet' href = 'style.css' />
	<meta name = 'viewport' content = 'width=device-width'/>
</head>
<style>
*{
	box-sizing: border-box;
	margin: 0;
	padding: 0;
	list-style: none;
	text-decoration: none;
}
html{
	scroll-behavior: smooth;
}
body{
	/* display: flex; */
	min-height: 100vh;
	/* justify-content: center; */
	/* align-items: center; */
	font-size: clamp(19px,1.7vw,22px);
	font-family: sans-serif;
	background: #eee;
}
h2{
	margin-top: 3em;
	text-align: center;
	padding: 30px 0;
}
table{
	width: min(100%,1100px);
	margin: 0 auto;
	background: #ffc5;
}
thead th{
	background: #402;
	padding: 20px;
	color: #fff;
	letter-spacing: .05em;
}
tbody td{
	text-align: center;
}
button{
	width: 100%; 
	padding: 20px;
	outline: none;
	border: none;
	color: #fff;
	background: #202;
	transition: all .1s;
	cursor: pointer;
	font-size: 1.2rem;
}
table tbody tr:nth-child(even){
	background: #dce4;
}
button:active{
	transform: scale(.9);
}
.action{
	display: flex;
}
.action > *{
	flex: 1 1 0;
	border: 2px solid #fff;
}
nav{
	background: linear-gradient(90deg, #ffe9 20%, #fff 50%,#002 100%);
	position: fixed;
	top: 0;
	width: 100%;
	padding: 5px;
}
nav ul{
	display: flex;
}
nav ul li a{
	padding: 20px 0;
	display: block;
	color: #000;
	text-align: center;
}
nav ul li{
	/* background: orange; */
	flex: 0 0 calc(100% / 9);
	letter-spacing: .03em;
}
nav ul li a:hover{
	background: #002;
	color: #fff;
}
.wrapper{
	width: min(100%,1200px);
	margin: 0 auto;
}

</style>
<html>
<body>
	<%- include("../Partials/header.ejs"); -%>	
	<h2>Elections</h2>
	<table>
		<thead>
			<th>S/N</th>
			<th>Election</th>
			<th>Position</th>
			<th>Closing Date</th>
			<th>Status</th>
			<th>Action</th>
		</thead>
		<tbody>
			<% elections.forEach((election,index) => {%>
				<tr>
					<td><%=index + 1%></td>
					<td><%=election.title.toUpperCase()%></td>
					<td><%=election.position.toUpperCase()%></td>
					<td><%=election.closingdate.toISOString().split("T")[0]%></td>
					<td><%=election.status%></td>
					<td class = 'action'>
						<button>Close</button>
						<a href = "/election_statistics/<%=election.id%>"><button>Statistics</button></a>
					</td>
				</tr>
			<%})%>
			<!-- <tr>
				<td>2</td>
				<td>Accouting</td>
				<td>P.R.O</td>
				<td>2022/12/29</td>
				<td>Open</td>
				<td class = 'action'>
					<button>Close</button>
					<button>Statistics</button>
				</td>
			</tr> -->
		</tbody>
	</table>
</body>
</html>